        	}
        }
        receiver {
        	success SearchOffersSucceeded{
        		timeouts(receipt=30s)   		
        		retries=3
        	}
        	success<Ebay> SearchEbayOffersSucceeded{
        		timeouts(receipt=30s)   		
        		retries=3
        	}            	        
            failure SearchOffersFailed{
        		timeouts(receipt=30s)   		
        		retries=3
        	}
        } 
    } 
}