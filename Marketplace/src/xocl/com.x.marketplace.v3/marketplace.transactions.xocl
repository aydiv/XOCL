      }
      
             
    transaction RevisePublishedOfferSucceeded<Ebay> notify {
        sender {
        	message RevisePublishedOfferSucceeded {
        		timeouts(receipt=30s)		
        		retries=3
        	}
        	message<Ebay> ReviseEbayPublishedOfferSucceeded {
