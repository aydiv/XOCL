/** This file includes the messages that are part of the
 *  order fulfillment domain
 */
package com.x.orderfulfillment.v1 {
	
	import com.x.orderfulfillment.v1.*
	import com.x.ordermanagement.v2.*
	
		
	record FulfillOrder {
		Order order
	}	
	
	record OrderAction {
		string orderNumber//change this to orderline item
		OrderStatus status
		//adjusted shipping/delivery window
		Shipping? shippingUpdate
	}
	
	record OrderComment {
		string orderNumber
		OrderStatus? status
		Shipping? shippingUpdate
		string comment
	}
	
	record CancelPartialOrder {
		array<SimpleOrderLineData> orderLines
	}
	
	record CancelOrder {
		Order order
	}
	
	record CancelOrderSucceeded extends CancelOrder{		
	}
	
	record CancelPartialOrderSucceeded extends CancelPartialOrder{
	}
	
	record CancelOrderFailed {
		string orderNumber
		array<Error> errors
	}
	
	record OrderShipped {
		string orderNumber
		string shipmentId
		array<TrackingDetail>? trackingDetails
		string sourceId
	}
	
}



